<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15sp"
        android:paddingBottom="15sp"
        android:background="#FFFFFF"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtTituloCheckin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="0dp"
            android:paddingTop="10dp"
            android:text="Parabéns! Agora você possui"
            android:textColor="#000040"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/txtTituloCheckin2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="25"
            android:textColor="#5096B4"
            android:textSize="45sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTituloCheckin3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingRight="0dp"
            android:paddingTop="10dp"
            android:text="pontos. Gostaria de trocar por algum destes benefícios?"
            android:textColor="#000040"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:weightSum="100" >

        <ImageView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="30"
            android:src="@drawable/meiafoca" />

        <ListView
            android:id="@+id/listaCheckouts"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:orientation="horizontal" />
    </LinearLayout>

</LinearLayout>