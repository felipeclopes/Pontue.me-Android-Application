<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:weightSum="100" >

        <ImageView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="30"
            android:src="@drawable/meiafoca" />

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtCupomMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parabéns! Você acaba de ganhar sua recompensa por frequentar este estabelecimento."
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtCupomRecompensa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recompensa: XXXXX"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnCupomOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50sp"
                android:background="#5096B4"
                android:minHeight="70sp"
                android:minWidth="280sp"
                android:text="Feito!"
                android:textColor="#FFFFFF"
                android:textSize="35dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>